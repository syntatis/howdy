{
	"name": "syntatis/howdy",
	"description": "Your next modern WordPress plugin project, made easy",
	"type": "wordpress-plugin",
	"keywords": [
		"wordpress",
		"plugin",
		"boilerplate"
	],
	"authors": [
		{
			"name": "Thoriq Firdaus",
			"homepage": "https://github.com/tfirdaus"
		}
	],
	"license": "GPL-2.0-or-later",
	"autoload": {
		"files": [
			"inc/helpers.php"
		],
		"psr-4": {
			"PluginName\\": "app/"
		}
	},
	"repositories": [
		{
			"type": "path",
			"url": "../codex",
			"options": {
				"symlink": false
			}
		},
		{
			"type": "path",
			"url": "../composer-project-plugin"
		}
	],
	"require": {
		"php": ">=7.4",
		"syntatis/codex": "@dev"
	},
	"require-dev": {
		"bamarni/composer-bin-plugin": "^1.8",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"syntatis/coding-standard": "^1.4",
		"syntatis/composer-project-plugin": "@dev"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"phpcs:fix": "phpcbf",
		"phpcs": "phpcs",
		"post-create-project-cmd": [
			"@composer syntatis:project init",
			"@composer u --lock",
			"@composer scope"
		],
		"scope": [
			"@composer bin php-scoper require -W humbug/php-scoper",
			"@composer i --no-dev --no-scripts",
			"php-scoper add-prefix --output-dir=dist-autoload --force --quiet",
			"@composer dump -d dist-autoload",
			"@composer i --no-scripts"
		]
	},
	"scripts-descriptions": {
		"scope": "Scope the autoloader to prevent conflicts with other plugins",
		"phpcs": "Check the codebase for coding standards violations",
		"phpcs:fix": "Fix coding standards violations"
	},
	"config": {
		"allow-plugins": {
			"bamarni/composer-bin-plugin": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"syntatis/composer-project-plugin": true
		},
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"extra": {
		"bamarni-bin": {
			"bin-links": true,
			"forward-command": true
		},
		"syntatis": {
			"project": {
				"name": "howdy"
			}
		}
	}
}
