{
    "name": "@syntatis/howdy",
    "version": "1.0.0",
    "description": "Your next modern WordPress plugin project, made easy",
    "author": {
        "name": "Thoriq Firdaus",
        "url": "https://github.com/tfirdaus"
    },
    "private": true,
    "license": "GPL-2.0-or-later",
    "keywords": [
        "wordpress",
        "plugin",
        "boilerplate"
    ],
    "engines": {
        "node": ">=18",
        "npm": ">=9"
    },
    "files": [
        "app",
        "dist-autoload",
        "dist",
        "inc",
        "index.php",
        "plugin-name.php",
        "uninstall.php",
        "!*.*.php"
    ],
    "dependencies": {
        "@syntatis/kubrick": "^0.1.0-beta.3",
        "@wordpress/api-fetch": "^7.3.0",
        "@wordpress/dom-ready": "^4.3.0",
        "@wordpress/element": "^6.8.0",
        "@wordpress/i18n": "^5.3.0"
    },
    "devDependencies": {
        "@wordpress/scripts": "^27.0.0"
    },
    "scripts": {
        "start": "wp-scripts start --output-path=dist",
        "build": "wp-scripts build --output-path=dist",
        "lint:js": "wp-scripts lint-js ./src",
        "lint:css": "wp-scripts lint-style ./src",
        "lint:md-docs": "wp-scripts lint-md-docs",
        "lint:pkg-json": "wp-scripts lint-pkg-json",
        "format": "wp-scripts format",
        "packages-update": "wp-scripts packages-update",
        "plugin-zip": "wp-scripts plugin-zip",
        "check-licenses": "wp-scripts check-licenses"
    }
}
